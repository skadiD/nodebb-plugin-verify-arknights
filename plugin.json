{
	"id": "nodebb-plugin-verifyreg",
	"name": "UID bind plugin",
	"description": "A plugin that check and bind user's game-uid when registering",
	"url": "https://github.com/skadiD/nodebb-plugin-verifyreg",
	"library": "./library.js",
	"hooks": [
		{
			"hook": "static:app.load", "method": "init"
		},{
			"hook": "filter:register.build", "method": "verifyUid"
		},{
			"hook": "filter:register.check", "method": "VerityBind"
		},{
			"hook": "filter:admin.header.build", "method": "addAdminNavigation"
		}
	],
	"staticDirs": {
		"static": "./static"
	},
	"less": [
		"static/style.less"
	],
	"scripts": [
		"static/lib/main.js"
	],
	"acpScripts": [
		"static/lib/admin.js"
	],
	"templates": "static/templates"
}